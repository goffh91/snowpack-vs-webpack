{
  "include": ["src"],
  "compilerOptions": {
    "outDir": "build",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {},
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["snowpack-env"],
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015",
      "es2015.promise",
      "es2016.array.include",
      "es2018"
    ],
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",

  }
}
